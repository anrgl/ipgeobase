<h2><%= @task.name %></h2>
<table>
  <tr>
    <td>Creator</td>
    <td>Performer</td>
    <td>Status</td>
    <td>Completed</td>
  </tr>
 <tr>
    <td><%= @task.creator %></td>
    <td><%= @task.performer %></td>
    <td><%= @task.status %></td>
    <td><%= t @task.completed? %></td>
  </tr>
</table>
<p><%= @task.description %></p>
<div><%= link_to 'Edit', edit_task_path(@task) %></div>
<div><%= link_to 'Destroy', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %></div>